# Required
OPENAI_API_KEY=sk-...

# Models
# Base model for all OpenAI calls (e.g., gpt-5-2025-08-07)
OPENAI_MODEL=gpt-5
# Optional overrides
# OPENAI_DIAGRAM_MODEL=
# OPENAI_QUALITY_MODEL=

# Extraction
ALLOWED_SHARE_HOSTS=chatgpt.com
MAX_INPUT_CHARS=60000
EXTRACT_CACHE_TTL_MS=300000
EXTRACT_CACHE_MAX=100

# Cost and logging
OPENAI_MAX_COST_USD=5
# Precision for cost logs (0-8)
OPENAI_COST_LOG_PRECISION=6

# Reasoning effort (low|medium|high)
OPENAI_REASONING_EFFORT=high
OPENAI_REASONING_EFFORT_MERMAID=high
OPENAI_REASONING_EFFORT_QUIZ=medium

# Mermaid pipeline
MERMAID_MODEL=gpt-5-2025-08-07
MERMAID_MAX_ITERS=3
MAX_MERMAID_REFINEMENTS=5
NEXT_PUBLIC_MAX_MERMAID_REFINEMENTS=5
MERMAID_REFINER_MODEL=gpt-5-2025-08-07
MERMAID_FEWSHOT_MAX=4
MERMAID_DEBUG_AGENTS=true

# Label wrapping/truncation
MERMAID_LABEL_WRAP=28
MERMAID_LABEL_MAX_LINES=4
MERMAID_EDGE_LABEL_WRAP=40
MERMAID_SANITIZE_MAX_LABEL=120
# Client-visible cap (optional)
# NEXT_PUBLIC_MERMAID_SANITIZE_MAX_LABEL=120
